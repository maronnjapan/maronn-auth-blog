---
import BaseLayout from '../layouts/BaseLayout.astro';
import ArticleList from '../islands/ArticleList';

const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:8787';
---

<BaseLayout title="フィード - GitHub Blog">
  <div class="container">
    <h1>最新の記事</h1>
    <ArticleList apiUrl={API_URL} client:load />
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: #333;
  }
</style>
