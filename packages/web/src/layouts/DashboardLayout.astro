    gap: 0.5rem;
    font-size: 1.25rem;
    font-weight: bold;
    color: white;
    text-decoration: none;
  }

  .logo-icon {
    width: 28px;
    height: 28px;
    flex-shrink: 0;
  }

  .sidebar-nav {
    flex: 1;
    padding: 1rem 0;
  }

  .nav-item {
    display: block;
    padding: 0.75rem 1.5rem;
    color: #ccc;
    text-decoration: none;
    transition: all 0.2s;
  }

  .nav-item:hover {
    background: #2a2a2a;
    color: white;
  }

  .nav-item.active {
    background: #0066cc;
    color: white;
  }

  .nav-item.admin {
    margin-top: auto;
    border-top: 1px solid #333;
  }

  .main-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .content-header {
    background: white;
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .content-header h1 {
    font-size: 1.75rem;
  }

  .content-body {
    flex: 1;
    padding: 2rem;
    overflow-x: hidden;
  }

  /* Tablet and Mobile Responsive Styles */
  @media (max-width: 768px) {
    .mobile-sidebar-toggle {
      display: flex;
    }

    .sidebar-close {
      display: flex;
    }

    .sidebar-overlay {
      display: block;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: -250px;
      height: 100vh;
      z-index: 1000;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
    }

    .sidebar.open {
      transform: translateX(250px);
    }

    .main-content {
      width: 100%;
      margin-left: 0;
    }

    .content-header {
      padding: 1rem 1rem 1rem 3.5rem;
    }

    .content-header h1 {
      font-size: 1.5rem;
    }

    .content-body {
      padding: 1.5rem 1rem;
    }
  }

  @media (max-width: 480px) {
    .mobile-sidebar-toggle {
      top: 0.75rem;
      left: 0.75rem;
      width: 36px;
      height: 36px;
    }

    .content-header {
      padding: 0.75rem 0.75rem 0.75rem 3rem;
    }

    .content-header h1 {
      font-size: 1.25rem;
    }

    .content-body {
      padding: 1rem 0.75rem;
    }
  }
</style>
