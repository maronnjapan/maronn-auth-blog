{
  "name": "@maronn-auth-blog/api",
  "version": "0.0.1",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "dev": "wrangler dev --port 8787 --inspector-port 9229",
    "build": "tsc --noEmit && wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "deploy:production": "pnpm build && wrangler deploy --env production",
    "db:migration:remote": "wrangler d1 migrations apply maronn-auth-blog-db --remote",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.1",
    "@maronn-auth-blog/shared": "workspace:*",
    "@octokit/auth-app": "^6.0.3",
    "@octokit/rest": "^20.0.2",
    "arctic": "^3.7.0",
    "hono": "^4.0.0",
    "jose": "^5.2.0",
    "resend": "^6.9.1",
    "wasm-image-optimization": "^1.4.5",
    "zenn-markdown-html": "^0.1.148",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1",
    "wrangler": "^4.59.2"
  }
}